<Window x:Class="abrirNovaJanela.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:abrirNovaJanela"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="nova" Content="Abrir nova janela!" TextElement.FontSize="30" TextElement.FontFamily="Cooper Black" Background="DarkOrchid" HorizontalAlignment="Left" Height="106" VerticalAlignment="Top" Width="404" Click="nova_Click" RenderTransformOrigin="0.5,0.5" Margin="188,234,0,0">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform X="-2" Y="2"/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Label Content="Informe seu nome:" HorizontalAlignment="Center" Height="25" Margin="0,57,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="nome" HorizontalAlignment="Left" Height="30" Margin="304,98,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="168"/>

    </Grid>
</Window>
